<?xml version="1.0" encoding="utf-8"?>
<plugin 
	xmlns="http://www.phonegap.com/ns/plugins/1.0" 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	id="cordova-plugin-hello" 
	version="1.3.1"
>	
	<name>Datadog</name>
	<author></author>

	<js-module src="www/datadog.js" name="datadog">
		<clobbers target="datadog" />
	</js-module>
	
	<platform name="ios">
		<!--<dependency id="cordova-plugin-add-swift-support" version="*" />-->
		  <podspec>
            <config>
            </config>
            <pods use-frameworks="true">
                <pod name="DatadogSDK" spec="~> 1.8.0" />
                <pod name="DatadogSDKCrashReporting" spec="~> 1.8.0" />
            </pods>
        </podspec>
        
       		<source-file src="src/ios/Datadog.swift" />

		<config-file target="config.xml" parent="/*">
			 <feature name="Datadog">
                		<param name="ios-package" value="Datadog"/>
				<param name="onload" value="true"/>
         		 </feature>
		</config-file>
	</platform>
</plugin>
